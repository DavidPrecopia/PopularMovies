<resources>
	
	<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
		<!--Sets the background of Activities-->
		<item name="android:windowBackground">@color/activityBackground</item>
	</style>
	
	<style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
	
	
	<!--Need padding at start and end to center the list items-->
	<style name="RecyclerViewMovies">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:paddingStart">@dimen/half_standard_margin</item>
		<item name="android:paddingEnd">@dimen/half_standard_margin</item>
	</style>
	
	<style name="ProgressBarStyle">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:visibility">visible</item>
	</style>
	
	<style name="ErrorTextView">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:drawableTop">@drawable/ic_error_outline_50dp</item>
		<item name="android:drawablePadding">@dimen/text_view_drawable_padding</item>
		<item name="android:textAppearance">?android:textAppearanceMedium</item>
		<item name="android:textColor">@android:color/white</item>
		<item name="android:visibility">gone</item>
	</style>
	
	<style name="FloatingActionButton">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="fab_colorNormal">@color/colorAccent</item>
		<item name="fab_showShadow">true</item>
		<item name="fab_size">mini</item>
	</style>
	
	<style name="CardViewListItem">
		<item name="cardBackgroundColor">@color/colorPrimary</item>
		<item name="cardCornerRadius">@dimen/corner_radius</item>
		<item name="cardElevation">@dimen/view_elevation</item>
	</style>
</resources>
